{% extends "layout.njk" %}

    {% block head %}
        <title>Receitas - Foodfy</title>
    {% endblock %}

{% block content %}   

    <main>
        <div class="main">        

            <div class="cards">

                {% for item in recipes %}
                    <div class="card">

                        <div class="card_img">
                            <img src="{{item.image}}" alt="Imagem de +{{item.title}}">
                        </div>

                        <div class="card_text">
                            <h2>{{item.title}}</h2>
                            <p>por {{item.author}}</p>
                        </div>

                    </div>
                {% endfor %}

            </div>

        </div>
    </main>

{% endblock %}