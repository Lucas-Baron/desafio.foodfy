{% extends "layout.njk" %}


{% block content %}   


    <div class="container_recipes">
        <div class="recipes_img">
            <img src="{{recipes.image}}" alt="{{recipes.title}}">
        </div>

        <div class="recipes_title">
            <h1>{{recipes.title}}</h1>
            <p>{{recipes.author}}</p>
        </div>

        <div class="recipes_ingredients">

                <div class="recipes_list">

                    <h3>Ingredientes <a id="buttomIng"> esconder </a></h3>

                    <div class="txt1">
                        {% for ingredient in recipes.ingredients %}
                            <ul class="recipes_list_ul">
                                <li> {{ingredient}} </li>                       
                            </ul>
                        {% endfor %}
                    </div>


                </div>


                <div class="recipes_list" >

                    <h3>Modo de preparo <a id="buttomPre"> esconder </a></h3>

                        <div class="txt2">       
                            {% for preparation in recipes.preparation %}
                                <ul class="recipes_list_ul"">
                                    <li>{{ preparation }}</li>
                                </ul>
                            {% endfor %} 
                        </div>                  
                                            
                </div>


                <div class="recipes_list">

                    <h3> Informações adicionais <a id="buttomInf"> esconder </a></h3>

                    <div class="txt3">
                        <p>
                            {{recipes.information}}
                        </p>
                    </div>
                </div>


        </div>
    </div>

{% endblock %}